@model Demo_MVC.Models.Student
@{
    ViewData["Title"] = "Create";
}
<h2>Create</h2>
<form asp-action="Upload" enctype="multipart/form-data">
  <div class="row form-control">
    <label class='mb-4'>Import Data form Excel: </label>
    <input type="file" name="file" class="col-sm-4">
    <input type="submit" value="Upload" class="btn btn-primary col-sm-1">
  </div>
</form>

<form asp-action="Create">
  <div class="container border p-4">
    <h2 class='mb-4'>Create Student</h2>
    <div class="form-group">
      <label asp-for="Id">Id</label>
      <input asp-for="Id" class='form-control fs-4'>
    </div>
    <div class="form-group">
      <label asp-for="FullName">Full Name</label>
      <input asp-for="FullName" class='form-control fs-4'>
    </div>
    <div class="form-group">
      <label asp-for="Address">Address</label>
      <input asp-for='Address' class='form-control fs-4'>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary mt-2">Create</button>
      <a asp-action="Index">Back to list</a>
    </div>
  </div>
</form>