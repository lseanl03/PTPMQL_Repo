@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Edit Role";
}

<div class="container">
    <h2>Edit Role</h2>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-group">
                    <label for="newName">Role Name:</label>
                    <input type="text" class="form-control" id="newName" name="newName" value="@Model.Name" required />
                </div>
                <button type="submit" class="btn btn-primary mt-2">Save</button>
                <a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>
            </form>
        </div>
    </div>
</div>
